#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="󱑖" ;;
	"01") icon="󱑋" ;;
	"02") icon="󱑌" ;;
	"03") icon="󱑍" ;;
	"04") icon="󱑎" ;;
	"05") icon="󱑏" ;;
	"06") icon="󱑐" ;;
	"07") icon="󱑑" ;;
	"08") icon="󱑒" ;;
	"09") icon="󱑓" ;;
	"10") icon="󱑔" ;;
	"11") icon="󱑕" ;;
	"12") icon="󱑖" ;;
esac

case $BLOCK_BUTTON in
	1) export fmt=false ;;
  3) export fmt=true ;;
esac

if [[ "$fmt" == true ]]; then
  date "+ 󰃮 %Y %b %d (%a) $icon %I:%M%p             "
else
  date "+ $icon %I:%M%p            "
fi

# date "+ 󰃮 %Y %b %d (%a) $icon %I:%M%p  "
